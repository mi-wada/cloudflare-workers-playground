{
	"name": "urlshortener",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"test": "vitest run",
		"lint": "biome check",
		"lint:fix": "biome check --fix",
		"db:migrate:local": "wrangler d1 execute urlshortener --file=./schema.sql --yes --local",
		"db:migrate:prod": "wrangler d1 execute urlshortener --file=./schema.sql --yes --remote"
	},
	"dependencies": {
		"hono": "4.7.10"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"vitest": "3.1.4",
		"wrangler": "4.16.1"
	},
	"engines": {
		"node": "23.11.0"
	}
}
