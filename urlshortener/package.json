{
	"name": "urlshortener",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"test": "vitest run",
		"lint": "biome check",
		"lint:fix": "biome check --fix",
		"db:migrate:local": "wrangler d1 execute urlshortener --file=./schema.sql --yes --local",
		"db:migrate:prod": "wrangler d1 execute urlshortener --file=./schema.sql --yes --remote"
	},
	"dependencies": {
		"hono": "4.7.10",
		"@modelcontextprotocol/sdk": "1.12.1",
		"zod": "3.25.42",
		"fetch-to-node": "2.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"vitest": "3.1.4",
		"wrangler": "4.18.0",
		"@types/node": "22.15.29"
	},
	"engines": {
		"node": "23.11.0"
	}
}
